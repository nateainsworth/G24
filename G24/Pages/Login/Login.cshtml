@page
@model G24.Pages.Login.LoginModel
@{
}
<div class="card login-card">
    <div class="card-header">
        <h1>Login</h1>
    </div>
    <div class="card-body">
        <form method="post">

            <div class="form-group">
                <label asp-for="UserRecord.EmailAddress">Username</label>
                <input type="text" asp-for="UserRecord.EmailAddress" class="form-control" />
                <span asp-validation-for="UserRecord.EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserRecord.Password">Password</label>
                <input type="text" asp-for="UserRecord.Password" class="form-control" />
                <span asp-validation-for="UserRecord.Password" class="text-danger"></span>
            </div>

            <div>
                <input type="submit" value="login" class="btn btn-primary btn-lg login-bttons active" /><a class="btn btn-secondary btn-lg active" asp-page="/Users/Create">Sign Up</a>
            </div>
        </form>
    </div>




    <div id="login-error" class="alert alert-danger login-error" role="alert">@Model.Message</div>

