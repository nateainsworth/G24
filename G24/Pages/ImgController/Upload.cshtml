@page
@model G24.Pages.ImgController.UploadModel
@{
}


<h1>Upload Image</h1>

<div>
    <form method="post">
        <div class="form-group">
            <!-- <label asp-for="ImgRecord.ImgURL" class="custom-control-label"></label>
            <input type="text" asp-for="ImgRecord.ImgURL" class="form-control" /> -->
            <label>Select a Image to upload</label>
            <input type="file" asp-for="ImgFile" onchange="readURL(this)" accept="image/*"/>
        </div>
        <div class="form-group">
            <label asp-for="ImgRecord.Type" class="custom-control-label"></label>
            <input type="text" asp-for="ImgRecord.Type" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ImgRecord.ImgName" class="custom-control-label"></label>
            <input type="text" asp-for="ImgRecord.ImgName" class="form-control" />
        </div>
        <input type="hidden" asp-for="ImgRecord.ImgID" class="form-control" value="ActiveRecord.UserID" />
        <input type="submit" value="Upload" class="btn btn-secondary" />
    </form>
    <br/>
    <div>
        <img id="Img" src="" alt="User Image Upload" style="width:200px;"/>
    </div>


</div>