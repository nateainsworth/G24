@page
@model G24.Pages.ImgController.IndexModel
@{
}

<h1>@Model.ImgRecord.ImgName</h1>


<div class="row">
    <div class="col-md-4">
        <img class="image-display" src="~/ImgUploads/@Model.ImgRecord.ImgURL" />
    </div>
    <div class="col-md-4">
        <p>This image was uploaded by... @Model.UploadUser</p>
        <p>Would you like to download this image?</p>
        <a asp-page="/ImgController/Index" asp-route-imgid="@Model.ImgRecord.ImgID" asp-route-download="1"><p class="btn btn-primary">Download</p></a>

</div>
</div>