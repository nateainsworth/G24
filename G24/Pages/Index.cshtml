@page
@model IndexModel
    ViewData["Title"] = "Group24";
}

<div class="hero">
    <h1 class="hero-text">Group24</h1>
    <div class="hero-banner"></div>
</div>
<div class="wrapper">
    <div class="container">
        <ul>
            @for (int i = 0; i < Model.ImageTypeSingleSet.Count; i++)
            {
                <li><a href="">@Model.ImageTypeSingleSet[i]</a></li>
            }
        </ul>
        <div class="row">
            <div class="col-4">
                
                @{    //<p>@Model.col1_ImgRecords[i].ImgID</p>
                    for (int i = 0; i < Model.col1_ImgRecords.Count; i++)
                    {
                                <div class="image-column">
                                    <div class="overlay"><span class="glyphicon glyphicon-download"></span></div>
                                    <img src="@Model.col1_ImgRecords[i].ImgURL" />
                                </div>
                    }
                }
            </div>
            <div class="col-4">
                @{
                    for (int i = 0; i < Model.col2_ImgRecords.Count; i++)
                    {
                        <div class="image-column">
                            <div class="overlay"><span class="glyphicon glyphicon-download"></span></div>
                            <img src="@Model.col2_ImgRecords[i].ImgURL" />
                        </div>
                    }
                }
            </div>
            <div class="col-4">
                @{
                    for (int i = 0; i < Model.col3_ImgRecords.Count; i++)
                    {
                        <div class="image-column">
                            <div class="overlay"><span class="glyphicon glyphicon-download"></span></div>
                            <img src="@Model.col3_ImgRecords[i].ImgURL" />
                        </div>
                    }
                }
            </div>
        </div>
               
   
    </div>
</div>
